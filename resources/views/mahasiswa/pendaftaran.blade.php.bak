            <script>
                document.addEventListener('DOMContentLoaded', () => {
                    const checkboxes = document.querySelectorAll('#prodi-options input[type="checkbox"]');
                    const counter = document.getElementById('prodi-counter');
                    const errorMsg = document.getElementById('prodi-error');
                    const saveBtn = document.getElementById('btn-save-prodi');
                    const realInput = document.getElementById('real-pilihan-prodi');

                    checkboxes.forEach(cb => {
                        cb.addEventListener('change', updateState);
                    });

                    function updateState() {
                        const selected = Array.from(checkboxes).filter(c => c.checked).map(c => c.value);
                        const count = selected.length;

                        // Updates
                        counter.textContent = `${count}/3 terpilih`;
                        realInput.value = selected.join(', ');

                        // Validation Logic (Min 2, Max 3)
                        if (count >= 2 && count <= 3) {
                            // Valid
                            errorMsg.style.display = 'none';
                            counter.classList.remove('text-red-500');
                            counter.classList.add('text-green-600');

                            // Enable Button
                            saveBtn.classList.remove('bg-gray-300', 'dark:bg-gray-700', 'text-gray-500', 'dark:text-gray-500', 'cursor-not-allowed', 'pointer-events-none');
                            saveBtn.classList.add('bg-primary', 'text-white', 'hover:bg-primary-dark', 'cursor-pointer');
                        } else {
                            // Invalid
                            errorMsg.style.display = 'block';
                            counter.classList.remove('text-green-600');
                            if (count > 3) counter.classList.add('text-red-500');

                            // Disable Button
                            saveBtn.classList.add('bg-gray-300', 'dark:bg-gray-700', 'text-gray-500', 'dark:text-gray-500', 'cursor-not-allowed', 'pointer-events-none');
                            saveBtn.classList.remove('bg-primary', 'text-white', 'hover:bg-primary-dark', 'cursor-pointer');
                        }

                        // Prevent selecting more than 3
                        if (count >= 3) {
                            checkboxes.forEach(cb => {
                                if (!cb.checked) cb.disabled = true;
                            });
                        } else {
                            checkboxes.forEach(cb => cb.disabled = false);
                        }
                    }
                });
            </script>

